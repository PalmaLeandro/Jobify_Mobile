<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_persons_person_layout"
    android:orientation="vertical"
    android:layout_height="200dp"
    android:layout_width="150dp"
    card_view:cardCornerRadius="@dimen/cardview_default_radius"
    card_view:cardElevation="@dimen/cardview_default_elevation">
    <ImageView
        android:id="@+id/main_persons_person_layout_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"/>
    <FrameLayout
        android:id="@+id/main_persons_person_layout_tag_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp">
        <TextView
            android:id="@+id/main_persons_person_layout_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_gravity="center_horizontal|bottom"
        android:background="#ea4f6e"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">
        <TextView
            android:id="@+id/main_persons_person_layout_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/main_persons_person_layout_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/main_persons_person_layout_name"
            android:layout_above="@+id/main_persons_person_layout_calification_star"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="#FFFFFF"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/main_persons_person_layout_calification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/main_persons_person_layout_calification_star"
            android:layout_alignParentBottom="true"
            android:textColor="#FFFFFF"
            android:textSize="14sp"/>
        <ImageView
            android:id="@+id/main_persons_person_layout_calification_star"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:tint="#FFFFFF"
            android:src="@drawable/ic_star"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>