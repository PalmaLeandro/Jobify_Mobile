<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/person_card"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="2dp"
    android:layout_margin="4dp"
    android:padding="8dp">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/person_image"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:contentDescription="Imagen del curso"
                android:scaleType="fitXY"
                android:layout_alignParentStart="true"
                android:padding="8dp"
                />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/person_image"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/person_name"
                    android:text="person name"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="false"
                    android:layout_toRightOf="@+id/person_image"
                    android:layout_centerVertical="true"
                    android:textIsSelectable="false"
                    android:textStyle="bold" />

                <TextView
                    android:textSize="12sp"
                    android:id="@+id/person_position"
                    android:text="person position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/person_name"
                    android:layout_alignStart="@+id/person_name" />
            </LinearLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>