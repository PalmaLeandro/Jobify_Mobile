<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/experience_card"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="@dimen/cardview_default_radius"
    card_view:cardElevation="@dimen/cardview_default_elevation"
    android:layout_margin="@dimen/card_margin">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/experience_company"
                android:text="experience company"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:textIsSelectable="false"
                android:textStyle="bold"
                android:layout_margin="@dimen/card_margin" />

            <TextView
                android:id="@+id/experience_position"
                android:text="experience position"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textIsSelectable="false"
                android:layout_alignStart="@id/experience_company"
                android:textStyle="bold"
                android:layout_below="@id/experience_company"/>

            <TextView
                android:textSize="12sp"
                android:id="@+id/experience_description"
                android:text="experience descrption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/experience_company"
                android:layout_below="@id/experience_position"/>

            <TextView
                android:id="@+id/experience_years"
                android:text="experience years"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textIsSelectable="false"
                android:layout_alignStart="@id/experience_company"
                android:layout_below="@id/experience_description"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>